<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingBottom="100dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/cancel"
                android:layout_weight="0.4"
                android:id="@+id/button_cancel"
                android:layout_width="0dp"
                android:layout_height="60dp"/>
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/enemy_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="中阶魔兽 枯木树人"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <ImageView
            android:id="@+id/enemy_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="中阶魔兽 三头血魔牛"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <ImageView
            android:id="@+id/enemy_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="中阶魔兽 白羽"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <ImageView
            android:id="@+id/enemy_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="中阶魔兽 触手狂魔"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <ImageView
            android:id="@+id/enemy_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="中阶魔兽 金身战猩"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <ImageView
            android:id="@+id/enemy_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="中阶魔兽 焰尾狐"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <ImageView
            android:id="@+id/enemy_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="中阶魔兽 棘牙兽"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
    </LinearLayout>
</ScrollView>