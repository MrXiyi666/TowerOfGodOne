<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollView"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingTop="60dp"
            android:paddingBottom="100dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/enemy_1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:text="初阶魔兽 蜥蜴怪"
                android:textSize="20sp"
                android:autoSizeTextType="uniform"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <ImageView
                android:id="@+id/enemy_2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:autoSizeTextType="uniform"
                android:text="初阶魔兽 野狼"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/enemy_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:autoSizeTextType="uniform"
                android:text="初阶魔兽 飞蝙"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <ImageView
                android:id="@+id/enemy_4"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:autoSizeTextType="uniform"
                android:text="初阶魔兽 水母怪"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <ImageView
                android:id="@+id/enemy_5"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:autoSizeTextType="uniform"
                android:textSize="20sp"
                android:text="初阶魔兽 刺球怪"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <ImageView
                android:id="@+id/enemy_6"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:autoSizeTextType="uniform"
                android:textSize="20sp"
                android:text="初阶魔兽 甲虫怪"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/enemy_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:autoSizeTextType="uniform"
                android:text="初阶魔兽 蛇怪"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:src="@drawable/cancel"
            android:layout_weight="0.4"
            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>