<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="60dp"
            android:paddingBottom="100dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/enemy_1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:text="初阶魔兽 灰羽雀"
                android:textSize="20sp"
                android:autoSizeTextType="uniform"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/enemy_2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:autoSizeTextType="uniform"
                android:textSize="20sp"
                android:text="初阶魔兽 泥沼蛙怪"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/enemy_3"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:autoSizeTextType="uniform"
                android:text="中阶魔兽 岩甲兽"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/enemy_4"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:autoSizeTextType="uniform"
                android:text="中阶魔兽 幽影狼"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/enemy_5"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:autoSizeTextType="uniform"
                android:text="高阶魔兽 炎鳞火龙"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <ImageView
                android:padding="10dp"
                android:id="@+id/enemy_6"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:autoSizeTextType="uniform"
                android:text="高阶魔兽 霜翼冰熊"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
