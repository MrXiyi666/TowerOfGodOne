<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:background="#80000000"
        android:padding="10dp"
        android:id="@+id/enemy_hp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="11sp"
        android:autoSizeMaxTextSize="50sp"
        android:autoSizeStepGranularity="1sp"
        android:text="HP:"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:gravity="center"
        android:visibility="invisible"
        android:id="@+id/enemy_xhp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="11sp"
        android:autoSizeMaxTextSize="50sp"
        android:autoSizeStepGranularity="1sp"
        android:background="#80000000"
        android:padding="10dp"
        android:layout_below="@id/enemy_hp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:adjustViewBounds="true"
        android:layout_margin="10dp"
        android:layout_below="@id/enemy_hp"
        android:layout_above="@id/center_view"
        android:id="@+id/enemy_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/enemy_hp"
        android:layout_above="@id/center_view"
        android:id="@+id/enemy_attack_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/center_view"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ImageView
        android:adjustViewBounds="true"
        android:layout_margin="10dp"
        android:layout_below="@id/center_view"
        android:layout_above="@id/actor_hp"
        android:id="@+id/actor_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:paddingBottom="100dp"
        android:layout_margin="10dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/center_view"
        android:layout_above="@id/actor_hp"
        android:id="@+id/actor_attack_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:gravity="center"
        android:visibility="invisible"
        android:id="@+id/actor_xhp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="11sp"
        android:autoSizeMaxTextSize="50sp"
        android:autoSizeStepGranularity="1sp"
        android:background="#80000000"
        android:padding="10dp"
        android:layout_above="@id/actor_hp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="#80000000"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/actor_hp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="11sp"
        android:autoSizeMaxTextSize="50sp"
        android:autoSizeStepGranularity="1sp"
        android:text="HP:"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/settled_layout"
        android:orientation="vertical"
        android:background="#80000000"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_margin="10dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="11sp"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeStepGranularity="1sp"
            android:id="@+id/settled_text"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/settled_text"
            android:id="@+id/logo_img"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_below="@id/logo_img"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="结束战斗"
            android:id="@+id/button_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>