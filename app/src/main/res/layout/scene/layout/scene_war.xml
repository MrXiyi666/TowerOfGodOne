<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fun.android.towerofgodone.View.Blood_View
        android:background="#80000000"
        android:padding="10dp"
        android:id="@+id/enemy_hp"
        android:autoSizeTextType="uniform"
        android:text="HP:"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:adjustViewBounds="true"
        android:layout_margin="10dp"
        android:layout_below="@id/enemy_hp"
        android:layout_above="@id/center_view"
        android:id="@+id/enemy_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/enemy_hp"
        android:layout_above="@id/center_view"
        android:id="@+id/enemy_attack_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <fun.android.towerofgodone.View.StrokeTextView
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:visibility="invisible"
        android:id="@+id/enemy_xhp"
        android:autoSizeTextType="uniform"
        android:background="#80000000"
        android:padding="10dp"
        android:layout_below="@id/enemy_hp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/center_view"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ImageView
        android:adjustViewBounds="true"
        android:layout_margin="10dp"
        android:layout_below="@id/center_view"
        android:layout_above="@id/actor_hp"
        android:id="@+id/actor_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:paddingBottom="100dp"
        android:layout_margin="10dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/center_view"
        android:layout_above="@id/actor_hp"
        android:id="@+id/actor_attack_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <fun.android.towerofgodone.View.StrokeTextView
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:visibility="invisible"
        android:id="@+id/actor_xhp"
        android:autoSizeTextType="uniform"
        android:background="#80000000"
        android:padding="10dp"
        android:layout_above="@id/actor_hp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <fun.android.towerofgodone.View.Blood_View
        android:textSize="20sp"
        android:background="#80000000"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/actor_hp"
        android:autoSizeTextType="uniform"
        android:text="HP:"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <fun.android.towerofgodone.View.StrokeTextView
        android:id="@+id/hasten_text"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="战斗加速"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/settled_layout"
        android:orientation="vertical"
        android:background="#80000000"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <fun.android.towerofgodone.View.StrokeTextView
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:autoSizeTextType="uniform"
            android:id="@+id/settled_text"
            android:textColor="@color/white"
            android:gravity="start"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/button_background"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="@color/button_text_color"
            android:text="结束战斗"
            android:id="@+id/button_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>