<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingBottom="200dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/cancel"
                android:layout_weight="0.4"
                android:id="@+id/button_cancel"
                android:layout_width="0dp"
                android:layout_height="60dp"/>
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:layout_weight="1"
                android:id="@+id/actor_avatar_img"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <fun.android.towerofgodone.View.StrokeTextView
                        android:maxLines="1"
                        android:text="名字："
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:autoSizeTextType="uniform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <fun.android.towerofgodone.View.StrokeTextView
                        android:maxLines="1"
                        android:text="谢羽"
                        android:textSize="20sp"
                        android:id="@+id/name_text"
                        android:textColor="@color/white"
                        android:autoSizeTextType="uniform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <fun.android.towerofgodone.View.StrokeTextView
                        android:maxLines="1"
                        android:text="境界："
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:autoSizeTextType="uniform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <fun.android.towerofgodone.View.StrokeTextView
                        android:layout_marginEnd="5dp"
                        android:maxLines="1"
                        android:textSize="20sp"
                        android:text="初阶冒险者"
                        android:id="@+id/boundary"
                        android:textColor="@color/white"
                        android:autoSizeTextType="uniform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <fun.android.towerofgodone.View.StrokeTextView
                        android:maxLines="1"
                        android:text="能量值："
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:autoSizeTextType="uniform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <fun.android.towerofgodone.View.StrokeTextView
                        android:layout_marginEnd="5dp"
                        android:maxLines="1"
                        android:textSize="20sp"
                        android:text="0"
                        android:id="@+id/value"
                        android:textColor="@color/white"
                        android:autoSizeTextType="uniform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
        <fun.android.towerofgodone.View.StrokeTextView
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="属性："
            android:textSize="20sp"
            android:id="@+id/actor_text"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <fun.android.towerofgodone.View.StrokeTextView
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="20sp"
                android:text="生命值："
                android:id="@+id/actor_hp"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="20sp"
                android:text=""
                android:id="@+id/actor_hp_text"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <fun.android.towerofgodone.View.StrokeTextView
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="20sp"
                android:text="攻击力："
                android:id="@+id/actor_attack"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="20sp"
                android:text=""
                android:id="@+id/actor_attack_text"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <fun.android.towerofgodone.View.StrokeTextView
                android:layout_weight="1"
                android:maxLines="1"
                android:text="防御力："
                android:textSize="20sp"
                android:id="@+id/actor_defense"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="20sp"
                android:text=""
                android:id="@+id/actor_defense_text"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <fun.android.towerofgodone.View.StrokeTextView
                android:layout_weight="1"
                android:maxLines="1"
                android:text="暴击率："
                android:textSize="20sp"
                android:id="@+id/actor_critical"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:layout_weight="1"
                android:maxLines="1"
                android:text=""
                android:textSize="20sp"
                android:id="@+id/actor_critical_text"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <fun.android.towerofgodone.View.StrokeTextView
                android:layout_weight="1"
                android:maxLines="1"
                android:text="速度："
                android:textSize="20sp"
                android:id="@+id/actor_speed"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="20sp"
                android:text=""
                android:id="@+id/actor_speed_text"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <fun.android.towerofgodone.View.StrokeTextView
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="装备："
            android:textSize="20sp"
            android:id="@+id/actor_equip"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <fun.android.towerofgodone.View.StrokeTextView
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="20sp"
                android:text="武器："
                android:id="@+id/actor_arms"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:layout_weight="1"
                android:maxLines="1"
                android:text="新手剑"
                android:textSize="20sp"
                android:id="@+id/actor_arms_text"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <fun.android.towerofgodone.View.StrokeTextView
                android:layout_weight="1"
                android:maxLines="1"
                android:text="衣服："
                android:textSize="20sp"
                android:id="@+id/actor_dress"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <fun.android.towerofgodone.View.StrokeTextView
                android:layout_weight="1"
                android:maxLines="1"
                android:text="皮衣"
                android:textSize="20sp"
                android:id="@+id/actor_dress_text"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:textColor="@color/button_text_color"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:id="@+id/button_up_boundary"
                android:background="@drawable/button_background"
                android:text="提升境界"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:textColor="@color/button_text_color"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:id="@+id/button_up_actor"
                android:background="@drawable/button_background"
                android:text="提升属性"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>